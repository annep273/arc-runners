# Registry
REGISTRY_HOST=docker.io
REGISTRY_NAMESPACE=your-dockerhub-username
IMAGE_TAG=0.1.7-s390x

# ARC source/build settings
ARC_GIT_REF=gha-runner-scale-set-0.13.1
ARC_CONTROLLER_VERSION=0.13.1
ARC_CONTROLLER_IMAGE_NAME=gha-runner-scale-set-controller
RUNNER_IMAGE_NAME=actions-runner
RUNNER_DIND_IMAGE_NAME=actions-runner-dind

# Runner binary source (s390x)
# Gold-Bull fork provides experimental linux-s390x runner tarballs
RUNNER_VERSION=3.314.1
RUNNER_DOWNLOAD_URL=https://github.com/Gold-Bull/github-actions-runner/releases/download/v3.314.1/actions-runner-linux-s390x-3.314.1.tar.gz
RUNNER_DOWNLOAD_SHA256=3e1165b0adc99f1133fff10ee9c5e205736071a614744a1764c6e3c5f0330a7c

# Runner container hooks version (optional; only needed if tarball doesn't bundle hooks)
RUNNER_CONTAINER_HOOKS_VERSION=

# Runner mode: "kubernetes" (default) or "dind" (for container builds in pods)
# Set to "dind" to use the actions-runner-dind image with podman/buildah
RUNNER_MODE=kubernetes

# Runner container hooks (for Kubernetes containerMode)
# Leave empty to use hooks bundled with the runner tarball (v2.304+)
# Set explicitly if the tarball does not include k8s hooks
RUNNER_CONTAINER_HOOKS_VERSION=

# OpenShift / Helm
ARC_SYSTEM_NAMESPACE=arc-systems
RUNNER_NAMESPACE=arc-runners
RUNNER_SCALE_SET_NAME=arc-s390x-runners
GITHUB_CONFIG_URL=https://github.example.com/organizations/example-org

# GitHub App auth (GHES)
GITHUB_APP_ID=
GITHUB_APP_INSTALLATION_ID=
GITHUB_APP_PRIVATE_KEY_PATH=./secrets/github-app.pem

# Optional: registry auth for OpenShift pull secret
REGISTRY_PULL_SECRET_NAME=arc-registry-pull-secret
REGISTRY_USERNAME=
REGISTRY_PASSWORD=
REGISTRY_EMAIL=devnull@example.com
